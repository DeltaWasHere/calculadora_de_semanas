<Window x:Class="calculadora_de_semanas.views.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculadora_de_semanas.views"
        mc:Ignorable="d"
        Title="LoadingWindow"
        WindowStyle="None"
        Height="50" Width="300"
        ContentRendered="Window_ContentRendered"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        BorderBrush="Gray">
    <StackPanel>
        <TextBlock x:Name="loadingStatus"> </TextBlock>
        <Grid>
            <ProgressBar Height="20" x:Name="progressBar"/>
            <TextBlock x:Name="progressBarProgress" HorizontalAlignment="Center"/>
        </Grid>
    </StackPanel>
</Window>
