<Window x:Class="calculadora_de_semanas.proyections"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:calculadora_de_semanas"
        mc:Ignorable="d"
        Title="proyections" Height="450" Width="800">
    <StackPanel Orientation="Horizontal">
        <ItemsControl x:Name="itemsToShow">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding person.salarioPromedioDisplay, StringFormat= Salario promedio: {0}}" />
                        <TextBlock Text="{Binding pension, StringFormat=Pension: {0}}"/>
                    </StackPanel>

                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</Window>
